extends ../layout/index 
block contenido

    main.container.mt5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                include ../layout/partials/testimoniales
                


            .col-md-12
                h2.text-center Agrega un Testimonio
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", type="text", class="form-control", placeholder="Tu nombre", name="nombre", value=nombre)

                            .form-group
                                label(for="correo") Email
                                input(id="correo", type="email", class="form-control", placeholder="email@", name="correo", value=correo)

                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3", placeholder="Tu mensaje", class="form-control")=mensaje

                            input(type="submit", class="btn btn-success btn-block", value="Agregar")